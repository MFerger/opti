<div class="text blogsummary">
  <h2>{{ 'layout.sidebar.blog_title' | t }}</h2>
  
  {% for article in blogs[settings.sidebar_blog_handle].articles limit: recent-blogs %}
  
  {% comment %}
  {% if article.image %}
  <p class="article-image">{{ article.image | img_url: 'large' | img_tag: article.image.alt | link_to: article.url }}</p>
  {% endif %}
  {% endcomment %}
  
  <h3><a href="{{ article.url }}">{{ article.title | strip_html | truncate: 30 }}</a></h3>
  <p class="date">{{ article.published_at | date: format: 'month_date_year' }}</p>
  <p>{{ article.content | strip_html | truncatewords: 20 }}</p>
  <p><a class="readmore" href="{{ article.url }}">{{ 'blogs.article.read_more_html' | t }} &rarr;</a></p><hr>
  {% endfor %}
  
</div>